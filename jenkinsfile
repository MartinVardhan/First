pipeline{
  agent any
  stages{
    stage('build'){      
      steps{
        build propagate: false, job: 'sample java program'        
      }
    }
  }
  post{
    success{
      emailext body: 'This is a Sample success test Mail', subject: 'Test Mail', to: 'piduguvardhan@gmail.com'
    }
    failure{
      emailext body: 'This is a Sample failure test Mail', subject: 'Test Mail', to: 'piduguvardhan@gmail.com'
    }
    always{
	  emailext body: 'Sample Java Program completed!!!', subject: 'Test Mail', to: 'piduguvardhan@gmail.com'
    }  	
  }
}
